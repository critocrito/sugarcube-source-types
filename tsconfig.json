{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "dist",
    "declarationDir": "dist",
    "allowJs": true,
    "allowSyntheticDefaultImports": true, 
    "strict": true,
    "declaration": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "resolveJsonModule": true
  },
  "include": ["src", "test"],
  "exclude": ["dist", "node_modules"]
}
