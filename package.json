{
  "name": "@sugarcube/source-types",
  "version": "0.1.7",
  "license": "GPL-3.0",
  "author": "Christo <christo@cryptodrunks.net>",
  "main": "dist/index.js",
  "module": "es6/index.js",
  "browser": "lib/index.js",
  "files": [
    "dist",
    "es6",
    "lib",
    "src"
  ],
  "scripts": {
    "build": "yarn verify && yarn compile",
    "clean": "rimraf dist",
    "precompile": "yarn clean",
    "compile": "yarn compile:src && yarn compile:module && yarn compile:browser && yarn compile:types",
    "compile:browser": "cross-env BABEL_ENV=browser babel --verbose -x .ts -s -d lib src",
    "compile:module": "cross-env BABEL_ENV=module babel --verbose -x .ts -s inline -d es6 src",
    "compile:src": "babel --verbose -x .ts -s inline -d dist src",
    "compile:types": "cross-env NODE_ENV=production tsc --project tsconfig.types.json",
    "compile:watch": "yarn compile:src -w",
    "fix": "yarn lint --fix",
    "lint": "eslint --cache --ext .js,.ts src test",
    "prepublishOnly": "yarn build",
    "prerelease": "yarn build",
    "release": "standard-version -i Changelog.md -m \"chore(release): bumped to version %s\" --sign",
    "test": "ava",
    "test:coverage": "nyc ava",
    "test:watch": "yarn test --watch",
    "type-check": "tsc --noEmit",
    "type-check:watch": "yarn type-check -w",
    "verify": "yarn lint && yarn type-check && yarn test",
    "watch": "concurrently --kill-others \"yarn compile:src -w\" \"entr src | yarn compile:types\" \"yarn test:watch\" \"yarn type-check:watch\" \"entr src | yarn lint\""
  },
  "types": "dist/index.d.ts",
  "devDependencies": {
    "@ava/babel": "^2.0.0",
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-typescript": "^7.15.0",
    "@babel/register": "^7.15.3",
    "@types/lodash": "^4.14.157",
    "@types/node": "^16.6.1",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "ava": "^3.15.0",
    "concurrently": "^6.2.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-ava": "^12.0.0",
    "eslint-plugin-import": "^2.24.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unicorn": "^35.0.0",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.2",
    "lodash": "^4.17.21",
    "nyc": "^15.1.0",
    "prettier": "^2.3.2",
    "prettier-package-json": "^2.6.0",
    "rimraf": "^3.0.2",
    "standard-version": "^9.3.1",
    "ts-node": "^10.2.0",
    "typescript": "^4.3.5",
    "typescript-language-server": "^0.6.0"
  },
  "ava": {
    "require": [
      "./test/_register.js",
      "ts-node/register/transpile-only"
    ],
    "files": [
      "test/**",
      "!test/{helpers,fixtures}/**"
    ],
    "ignoredByWatcher": [
      "{dist,coverage,doc,resources,scripts}/**"
    ],
    "extensions": [
      "ts"
    ],
    "babel": {
      "compileEnhancements": false,
      "compileAsTests": [
        "test/helpers/**/*"
      ]
    }
  },
  "babel": {
    "env": {
      "development": {
        "presets": [
          [
            "@babel/preset-env",
            {
              "targets": {
                "node": "12"
              }
            }
          ],
          "@babel/typescript"
        ]
      },
      "browser": {
        "presets": [
          [
            "@babel/preset-env",
            {
              "targets": {
                "browsers": "last 2 versions, ie 10-11"
              },
              "modules": false
            }
          ],
          "@babel/typescript"
        ]
      },
      "module": {
        "presets": [
          [
            "@babel/preset-env",
            {
              "targets": {
                "node": "12"
              },
              "modules": false
            }
          ],
          "@babel/typescript"
        ]
      }
    }
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "2018",
      "sourceType": "module",
      "project": "./tsconfig.json"
    },
    "env": {
      "node": true,
      "es6": true
    },
    "extends": [
      "airbnb-typescript/base",
      "plugin:@typescript-eslint/recommended",
      "plugin:ava/recommended",
      "plugin:promise/recommended",
      "plugin:unicorn/recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "@typescript-eslint",
      "ava",
      "simple-import-sort",
      "promise",
      "unicorn",
      "prettier"
    ],
    "rules": {
      "object-curly-spacing": "off",
      "no-console": [
        "warn",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ],
      "no-use-before-define": [
        "error",
        {
          "functions": false,
          "classes": true,
          "variables": true
        }
      ],
      "@typescript-eslint/no-use-before-define": [
        "error",
        {
          "functions": false,
          "classes": true,
          "variables": true,
          "typedefs": true
        }
      ],
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "import/prefer-default-export": "off",
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "test/**/*.ts",
            "test/**/*.js",
            "test/test-setup.js",
            "scripts/**/*.js"
          ]
        }
      ],
      "simple-import-sort/imports": "error",
      "simple-import-sort/exports": "error",
      "unicorn/prefer-node-protocol": "off",
      "unicorn/prevent-abbreviations": "off",
      "unicorn/no-array-for-each": "off",
      "unicorn/no-reduce": "off",
      "unicorn/no-useless-undefined": "off"
    },
    "overrides": [
      {
        "files": [
          "*.ts"
        ],
        "rules": {
          "@typescript-eslint/explicit-function-return-type": "error"
        }
      }
    ]
  },
  "lint-staged": {
    "{*.json,*rc}": [
      "prettier --parser json --write"
    ],
    "**/package.json": [
      "prettier-package-json --write"
    ],
    "{*.js,*.ts}": [
      "eslint --fix"
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "bracketSpacing": false,
    "arrowParens": "always",
    "tabWidth": 2
  }
}
